doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
    body 
        header.main-header 
            nav.main-header__nav 
                ul.main-header__item-list
                    li.main-header__item 
                        a.active(href='/') Shop 
                    li.main-header__item
                        a(href="/admin/add-product") Add Product  

        main
            if prods.length > 0
                .grid 
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title} 
                            div.card__image 
                                img(src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fpixabay.com%2Fimages%2Fsearch%2Fbooks%2F&psig=AOvVaw0jNw84LrYQCShd8ZU_OVTJ&ust=1673184224749000&source=images&cd=vfe&ved=0CA8QjRxqFwoTCJjWqYzHtfwCFQAAAAAdAAAAABAJ", alt="A book")
                            div.card__content
                                h2.product_price 199$
                                p.product_description   A very nice book 
                            .card__actions 
                            button.btn Add to cart
            else 
                h1 No Products  